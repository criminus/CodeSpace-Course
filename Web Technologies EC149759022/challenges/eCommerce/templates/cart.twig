<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{sitename}} - {{pageTitle}}</title>
        {% include 'head.twig' %}
	</head>
	<body>
		{% include 'navigation.twig' %}
		<div class="container">
        <br>
            <div class="card">
            <div class="card-header">
                My basket
            </div>
            <div class="card-body">
                <h5 class="card-title">The following items are currently in your basket:</h5>

                {% if items is not empty %}
                        <table class="table">
                        <thead>
                            <tr>
                            <th scope="col">Product name</th>
                            <th scope="col">Product Description</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Price</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for item in items %}
                            <tr id="#{{item.item_id}}">
                            <td>{{item.item_name}}</td>
                            <td>{{item.item_desc}}</td>
                            <td>{{item.quantity}}</td>
                            <td>{{item.item_price * item.quantity}}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        </table>
                {% else %}
                    <p class="card-text">Your cart is empty :)</p>
                {% endif %}

                <a href="index.php"><i class="bi bi-arrow-return-left"></i> Back to main page</a>
            </div>
            </div>
		</div>
		<br>
		<br>
		<br>
		<br>
		{% include 'footer.twig' %}
	</body>
</html>