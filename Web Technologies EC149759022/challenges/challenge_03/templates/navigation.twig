                    <a class="nav-link {% if pages.index.isActive %}active{% endif %}" aria-current="page" href="{{ pages.index.url }}">
                        <i class="bi bi-house-door-fill"></i> Home </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle {% if pages.mens.isActive or pages.pocket.isActive or pages.womens.isActive %}active{% endif %}" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-bag-check"></i> Products </a>
