                        <li>
                            <a class="dropdown-item {% if pages.pocket.isActive %}active{% endif %}" href="{{ pages.pocket.url }}">Pocket Watch</a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if pages.contact.isActive %}active{% endif %}" href="{{ pages.contact.url }}">
                        <i class="bi bi-person-lines-fill"></i> Contact </a>
                </li>
            </ul>
            <span class="navbar-text">
                <form class="container-fluid justify-content-start">
                    <button class="btn btn-outline-success me-2" onclick="goSignup();" id="signup" data-bs-toggle="tooltip" data-bs-placement="left" data-bs-title="New to MK Time? Create a free account now!" type="button">Sign Up</button>
                    <button class="btn btn-sm btn-outline-secondary" onclick="goSignin();" type="button">Sign In</button>
                </form>
            </span>
